  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>MTB_Rifle</defName>
    <label>S44 assault rifle</label>
    <description>Very powerful rifle made from thorium alloy. Fires bursts of 6 shots, semi-long range and very precise. Great for every situation.</description>
    <graphicData>
      <texPath>Things/Item/Weapon/256_ThoriumAR</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>MTB_AR</researchPrerequisite>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <statBases>
      <WorkToMake>120000</WorkToMake>
      <MaxHitPoints>1000</MaxHitPoints>
      <Mass>2.2</Mass>
      <AccuracyTouch>1.0</AccuracyTouch>
